.list-title {
  font-size: 18px;
  font-weight: 600;
  margin: 24px 0 24px 12px;
}

.list-inner {
  width: 100%;
  height: fit-content;
}

.item {
  float: left;
  width: 49.5%;
  box-sizing: border-box;
  /* border: 1px solid red; */
  padding:12px 12px 0;
  position: relative;
}

.item:nth-child(even) {
  margin-left: 1%;
}

.item .flag {
  position: absolute;
  top: 24px;
  left: 46px;
  width: 2em;
  background: red;
  color: white;
  font-size: 0.8em;
}

.item .flag::after {
  content: '';
  position: absolute;
  top: 1.2em;
  left: 0;
  width: 0;
  height: 0;
  border: 1em solid red;
  border-bottom-color: transparent; 
}

.item .img image {
  width: 100%;
  height: 156px;
}

.item .item-title {
  display: inline-block;
  height: 2em;
  line-height: 2em;
  width: 100%;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.item .price {
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.item .price .now-price,
.item .price .old-price {
  display: inline-block;
}

.item .price .now-price  {
  color: red;
  font-size: 1.2em;
}

.item .price .old-price {
  color: grey;
  text-decoration: line-through;
  margin: 0 18px;
  font-size: 0.9em;
}

.item .price .cart {
  background-image: url('https://img0.baidu.com/it/u=3014450487,1755390540&fm=253&fmt=auto&app=138&f=JPEG?w=500&h=500');
  background-size: 100% 100%;
  width: 36px;
  height: 36px;
}